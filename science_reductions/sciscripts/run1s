if [ -f /work/03946/hetdex/maverick/${date}/virus/virus0000${shot}.tar ]; then
  cp /work/03946/hetdex/maverick/${date}/virus/virus0000${shot}.tar .
elif [ -f /scratch/03261/polonius/het_raw/${date}/virus/virus0000${shot}.tar ]; then
  cp /scratch/03261/polonius/het_raw/${date}/virus/virus0000${shot}.tar .
else
  echo "Cannot find shot tar file, ${date}/virus/virus0000${shot}.tar under /work/03946/hetdex/maverick or /scratch/03261/polonius/het_raw"
